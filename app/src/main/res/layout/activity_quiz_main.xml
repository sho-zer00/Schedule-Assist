<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#fffacd">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:text="今のスケジュール管理レベルは、、、"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/level_result"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:text="レベル◯"
        android:textSize="80sp"
        android:gravity="center_horizontal"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="です。"
        android:gravity="right"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button_quiz"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="アンケートに進む"
        android:layout_weight="0.02" />
        <!--
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.08" />
    <Button
        android:id="@+id/button_type"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="レベルの解説を見る"
        android:layout_weight="0.02" />
        -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.08" />
    <TextView
        android:id="@+id/level4_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="あなたは、スケジュール通りにしっかりと行動ができていると言えます。\nこの調子で頑張っていきましょう。"
        android:visibility="invisible"
        android:layout_weight="0.14"
        android:textSize="20sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.08" />
        <Button
            android:id="@+id/button_level"
            android:layout_width="171dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="レベルの紹介"
            android:layout_weight="0.02" />

    </LinearLayout>
</ScrollView>
