<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffacd"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/DetailTitleText"
            android:ellipsize="end"
            android:textSize="50sp"
            tools:text="保存されている予定"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/DetailUpdateTime"
            android:layout_below="@+id/DetailTitleText"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textColor="@android:color/darker_gray"
            android:textSize="15sp"
            tools:text="date"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/yes_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            tools:layout_editor_absoluteX="51dp"
            tools:layout_editor_absoluteY="265dp"
            android:layout_marginTop="97dp"
            android:layout_below="@+id/QuestionView"
            android:layout_alignStart="@+id/QuestionView" />

        <Button
            android:id="@+id/no_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"
            tools:layout_editor_absoluteX="245dp"
            tools:layout_editor_absoluteY="265dp"
            android:layout_alignBaseline="@+id/yes_button"
            android:layout_alignBottom="@+id/yes_button"
            android:layout_alignEnd="@+id/QuestionView" />

        <TextView
            android:id="@+id/QuestionView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Did you do plan ?"
            android:textSize="36dp"
            android:layout_marginTop="98dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</LinearLayout>