<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffacd"
    tools:context="com.example.android.sample.sotuken.activity.Check">
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/evaluation_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail"
            tools:layout_editor_absoluteX="51dp"
            tools:layout_editor_absoluteY="265dp"
            android:layout_marginStart="22dp"
            android:layout_alignBaseline="@+id/evaluation_button2"
            android:layout_alignBottom="@+id/evaluation_button2"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/evaluation_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="151dp"
            android:text="Graph"
            tools:layout_editor_absoluteX="245dp"
            tools:layout_editor_absoluteY="265dp"
            android:layout_alignTop="@+id/textView"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="126dp"
            android:text="Evaluation"
            android:textSize="50dp" />

        <Button
            android:id="@+id/quiz_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question"
            android:layout_marginEnd="21dp"
            android:layout_alignBaseline="@+id/evaluation_button2"
            android:layout_alignBottom="@+id/evaluation_button2"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</LinearLayout>