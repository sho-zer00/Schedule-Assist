<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffacd"
    tools:context="com.example.android.sample.sotuken.Check">
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/check_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PlanCheck"
            tools:layout_editor_absoluteX="51dp"
            tools:layout_editor_absoluteY="265dp"
            android:layout_marginStart="47dp"
            android:layout_alignBaseline="@+id/check_button2"
            android:layout_alignBottom="@+id/check_button2"
            android:layout_alignParentStart="true"
            />

        <Button
            android:id="@+id/check_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="188dp"
            android:text="Evaluation"
            tools:layout_editor_absoluteX="245dp"
            tools:layout_editor_absoluteY="265dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="50dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/check_button1"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="100dp"
            android:text="Check"
            android:textSize="50dp" />

    </RelativeLayout>

</LinearLayout>