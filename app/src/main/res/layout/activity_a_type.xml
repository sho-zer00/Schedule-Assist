<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#fffacd">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aタイプのあなたは、"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="脳に別のものを見せてしまい、手遅れになってしまう"
        android:textColor="#f45f42"
        android:textSize="30sp"
        android:layout_weight="0.03" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ことが多いのではないでしょうか。"
        android:gravity="right"
        android:textSize="20sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="そんなあなたは、、"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="身近な物の置く場所は決まってますか？\n決まってなければ決めましょう！"
        android:textSize="30sp"
        android:textColor="#f45f42"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="さらに詳細を見る"
            android:id="@+id/a_type_button"
            android:layout_weight="0.00" />

    </LinearLayout>


</ScrollView>